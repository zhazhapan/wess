.v-center {
  display: flex;
  align-items: center;
}

.h-center {
  display: flex;
  justify-content: center;
}

.vh-center {
  display: flex;
  justify-content: center;
  align-content: center;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200 rpx 0;
  box-sizing: border-box;
}

.show {
  display: block;
}

.flex-vertical {
  flex-direction: column;
  display: flex;
  width: 100%;
}

.flex-inline {
  flex-direction: row;
  display: flex;
  width: 100%;
}

.error-txt {
  color: red;
  text-align: center;
  font-size: 24 rpx;
}